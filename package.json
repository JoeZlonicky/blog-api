{
  "name": "blog-api",
  "version": "0.1.0",
  "license": "ISC",
  "private": "true",
  "module": "true",
  "prisma": {
    "schema": "src/db/schema.prisma",
    "seed": "ts-node src/scripts/seedDb.ts"
  },
  "scripts": {
    "start": "tsx src/app.ts",
    "watch": "tsx --watch src/app.ts",
    "populate-db": "tsx src/scripts/seedDb.ts",
    "type-check": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.ts --fix",
    "format": "prettier src --write"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.18.0",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  }
}
